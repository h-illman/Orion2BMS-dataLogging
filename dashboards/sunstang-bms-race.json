{
  "__inputs": [
    {
      "name": "DS_INFLUXDB",
      "label": "InfluxDB 3 Core",
      "description": "",
      "type": "datasource",
      "pluginId": "influxdb",
      "pluginName": "InfluxDB"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "11.0.0"
    },
    {
      "type": "datasource",
      "id": "influxdb",
      "name": "InfluxDB",
      "version": "3.x"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    }
  ],
  "id": null,
  "uid": "sunstang-bms-race",
  "title": "Sunstang BMS â€“ Race Dashboard",
  "tags": ["sunstang", "bms", "race"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "2s",
  "style": "dark",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "SOC",
      "description": "Latest state of charge",
      "datasource": {
        "type": "influxdb",
        "uid": "${DS_INFLUXDB}"
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT time, soc\nFROM bms_telemetry\nWHERE car_id = '$car_id'\nORDER BY time DESC\nLIMIT 1;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 40 },
              { "color": "green", "value": 60 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "value"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Max Temperature",
      "description": "Latest maximum cell temperature",
      "datasource": {
        "type": "influxdb",
        "uid": "${DS_INFLUXDB}"
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT time, max_temp\nFROM bms_telemetry\nWHERE car_id = '$car_id'\nORDER BY time DESC\nLIMIT 1;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 35 },
              { "color": "red", "value": 45 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "value"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "BMS Fault Flag",
      "description": "0 = OK, 1 = fault (or custom mapping)",
      "datasource": {
        "type": "influxdb",
        "uid": "${DS_INFLUXDB}"
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT time, fault_flag\nFROM bms_telemetry\nWHERE car_id = '$car_id'\nORDER BY time DESC\nLIMIT 1;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "index": 0, "text": "OK" },
                "1": { "index": 1, "text": "FAULT" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 0.5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "value"
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Pack Voltage",
      "description": "Pack voltage vs time",
      "datasource": {
        "type": "influxdb",
        "uid": "${DS_INFLUXDB}"
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT time, pack_voltage\nFROM bms_telemetry\nWHERE $__timeFilter(time) AND car_id = '$car_id'\nORDER BY time;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "volt",
          "decimals": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Average Temperature",
      "description": "Average pack/cell temperature vs time",
      "datasource": {
        "type": "influxdb",
        "uid": "${DS_INFLUXDB}"
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT time, avg_temp\nFROM bms_telemetry\nWHERE $__timeFilter(time) AND car_id = '$car_id'\nORDER BY time;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "decimals": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "hidden",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Pack Current",
      "description": "Pack current vs time (discharge +, regen -)",
      "datasource": {
        "type": "influxdb",
        "uid": "${DS_INFLUXDB}"
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT time, pack_current\nFROM bms_telemetry\nWHERE $__timeFilter(time) AND car_id = '$car_id'\nORDER BY time;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "amp",
          "decimals": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "hidden",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "car_id",
        "type": "query",
        "datasource": {
          "type": "influxdb",
          "uid": "${DS_INFLUXDB}"
        },
        "refresh": 1,
        "hide": 0,
        "label": "Car",
        "query": "SELECT DISTINCT car_id FROM bms_telemetry;",
        "definition": "SELECT DISTINCT car_id FROM bms_telemetry;",
        "multi": false,
        "includeAll": false,
        "current": {
          "text": "sunstang24",
          "value": "sunstang24",
          "selected": true
        }
      }
    ]
  },
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["1s", "2s", "5s", "10s", "30s", "1m", "5m", "15m"],
    "time_options": ["5m", "15m", "30m", "1h", "3h", "6h", "12h", "24h"]
  }
}
